    <%= f.label :narrative %><br />
    <%= f.text_area :narrative %>
  </div>
  <div class="field">
    <%= f.label :estimate %><br />
    <%= f.text_field :estimate %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </div>
  <div class="field">
    <%= f.label :iteration_id, "Iteration" %>
    <%= f.collection_select(:iteration_id, Iteration.all, :id, :name, :include_blank => true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
